
<section>
  <h2>Create New Post</h2>
  <form class="new-post-form">
    <div class="p-2">
      <h3>Title</h3>
      <input class="form-control" type="text" id="post-title" name="post-title" />
    </div>
    <div class="p-2">
      <h3>Write Your Post</h3>
      <input class="form-control form-control-lg" id="post-body" name="post-body" />
    </div>
    <button type="submit" class="form-control btn btn-dark text-white">Create</button>
  </form>
</section>
<br>
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol class="list-unstyled">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link"><button>Edit post</button> </a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
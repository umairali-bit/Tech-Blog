<form class='login-form'>
  <div class="mb-3">
    <label for="email-login" class="form-label">Email address</label>
    <input type="text" class="form-control" id="email-login" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="password-login" class="form-label">Password</label>
    <input type="password" class="form-control" id="password-login">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<br> <br>

<form class='signup-form'>
  <div class="mb-3">
    <label for="username-signup" class="form-label">User Name</label>
    <input type="username-signup" class="form-control" id="username-signup" aria-describedby="username-signup">
  </div>
  <div class="mb-3">
    <label for="email-signup" class="form-label">Email address</label>
    <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="password-signup" class="form-label">Password</label>
    <input type="password" class="form-control" id="password-signup">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</form>

<script src="/js/login.js"></script>